generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscriptions {
  id              String  @id @default(uuid())
  name            String
  telefone        String?
  cpf             String
  rua             String?
  numero          String?
  bairro          String?
  cidade          String
  estado          String
  cep             String
  cargo           String?
  cargoPretendido String
  pixCode         String?
  pago            Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
